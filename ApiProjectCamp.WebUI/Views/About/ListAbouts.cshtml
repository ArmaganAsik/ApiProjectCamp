@model List<ResultAboutDto>
@{
    ViewData["Title"] = "ListAbouts";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Hakkımda Alanı Listesi</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Görsel Url</th>
                                    <th scope="col">Video Kapak Url</th>
                                    <th scope="col">Video Url (Embed olarak)</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Reservasyon No</th>
                                    <th scope="col">Hakkımda Alanı Sil</th>
                                    <th scope="col">Hakkımda Alanı Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (ResultAboutDto item in Model)
                                {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.ImageUrl</td>
                                        <td>@item.VideoCoverImageUrl</td>
                                        <td>@item.VideoUrl</td>
                                        <td>@item.Description</td>
                                        <td>@item.ReservationNumber</td>
                                        <td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-warning">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        @if (Model.Count < 1)
                        {
                            <a href="/About/CreateAbout" class="btn btn-success">Hakkımda alanı ekle</a>
                        }
                        else
                        {
                            <a href="/About/CreateAbout" class="btn btn-success" onclick="return false">Hakkımda alanı mevcut</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>