@model GetByIdAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Hakkımda Alanı Güncelleme Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="AboutId" />
                            <label>Kategori Adı</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Görsel Url</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                            <br />
                            <label>Video Kapak Url</label>
                            <input type="text" asp-for="VideoCoverImageUrl" class="form-control" />
                            <br />
                            <label>Video Url (Embed olarak)</label>
                            <input type="text" asp-for="VideoUrl" class="form-control" />
                            <br />
                            <label>Açıklama</label>
                            <textarea rows="5" asp-for="Description" class="form-control"></textarea>
                            <br />
                            <label>Reservasyon No</label>
                            <input type="text" asp-for="ReservationNumber" class="form-control" />
                            <br />
                            <button class="btn btn-primary">Hakkımda alanı güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>