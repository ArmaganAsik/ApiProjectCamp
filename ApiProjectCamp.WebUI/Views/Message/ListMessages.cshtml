@model List<ResultMessageDto>
@{
    ViewData["Title"] = "ListMessages";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Mesaj Listesi</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">İsim - Soyisim</th>
                                    <th scope="col">Mail</th>
                                    <th scope="col">Konu</th>
                                    <th scope="col">Mesaj Detayı</th>
                                    <th scope="col">Gönderim Tarihi</th>
                                    <th scope="col">Okundu Bilgisi</th>
                                    <th scope="col">Mesajı Sil</th>
                                    <th scope="col">Mesajı Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (ResultMessageDto item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.NameSurname</td>
                                        <td>@item.Email</td>
                                        <td>@item.Subject</td>
                                        <td>@item.MessageDetails</td>
                                        <td>@item.SendDate.ToString("dd-MM-yyyy")</td>
                                        <td>@item.IsRead</td>
                                        <td><a href="/Message/DeleteMessage/@item.MessageId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Message/UpdateMessage/@item.MessageId" class="btn btn-warning">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/Message/CreateMessage" class="btn btn-success">Yeni mesaj ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>