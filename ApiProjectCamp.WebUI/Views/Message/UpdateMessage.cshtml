@model GetByIdMessageDto
@{
    ViewData["Title"] = "UpdateMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Mesaj Güncelleme Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            @Html.HiddenFor(x=>x.MessageId)
                            <label>İsim - Soyisim</label>
                            <input type="text" asp-for="NameSurname" class="form-control" />
                            <br />
                            <label>Mail</label>
                            <input type="text" asp-for="Email" class="form-control" />
                            <br />
                            <label>Konu</label>
                            <input type="text" asp-for="Subject" class="form-control" />
                            <br />
                            <label>Mesaj Detayı</label>
                            <textarea rows="3" asp-for="MessageDetails" class="form-control"></textarea>
                            <br />
                            <label>Mesaj Tarih</label>
                            <input type="datetime-local" asp-for="SendDate" class="form-control" />
                            <br />
                            <label>Okundu Bilgisi</label>
                            <input type="checkbox" asp-for="IsRead" class="form-check-input" style="transform : scale(1.5); margin-left : 8px" />
                            <br />
                            <br />
                            <button class="btn btn-primary">Mesajı güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>