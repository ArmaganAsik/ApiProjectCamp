@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "ListFeatures";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Öne Çıkan Alan İşlemleri</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Altbaşlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Video Url (Embed Link)</th>
                                    <th scope="col">Görsel Url</th>
                                    <th scope="col">Özelliği Sil</th>
                                    <th scope="col">Özelliği Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (ResultFeatureDto item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.Title</td>
                                        <td>@item.SubTitle</td>
                                        <td>@item.Description</td>
                                        <td>@item.VideoUrl</td>
                                        <td>@item.ImageUrl</td>
                                        <td><a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-warning">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        @if(Model.Count < 1)
                        {
                            <a href="/Feature/CreateFeature" class="btn btn-success">Yeni feature ekle</a>
                        }
                        else
                        {
                            <a href="/Feature/CreateFeature" class="btn btn-success" onclick="return false">Feature mevcut</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>