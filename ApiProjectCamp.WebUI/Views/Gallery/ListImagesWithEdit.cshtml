@model List<ResultImageDto>
@{
    ViewData["Title"] = "ListImagesWithEdit";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Görsel Listesi</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Görsel Başlığı</th>
                                    <th scope="col">Görsel Url</th>
                                    <th scope="col">Görseli Sil</th>
                                    <th scope="col">Görseli Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (ResultImageDto item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.Title</td>
                                        <td>@item.ImageUrl</td>
                                        <td><a href="/Gallery/DeleteImage/@item.ImageId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Gallery/UpdateImage/@item.ImageId" class="btn btn-warning">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/Gallery/CreateImage" class="btn btn-success">Yeni görsel ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>