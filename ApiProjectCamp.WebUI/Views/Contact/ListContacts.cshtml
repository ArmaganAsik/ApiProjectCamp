@model List<ResultContactDto>
@{
    ViewData["Title"] = "ListContacts";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>İletişim Bilgileri Listesi</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Harita Lokasyon Bilgisi</th>
                                    <th scope="col">Adres</th>
                                    <th scope="col">Telefon</th>
                                    <th scope="col">Mail</th>
                                    <th scope="col">Açık Saatler</th>
                                    <th scope="col">İletişim Bilgisini Sil</th>
                                    <th scope="col">İletişim Bilgisini Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (ResultContactDto item in Model)
                                {
                                    <tr>
                                        <td>@item.MapLocation</td>
                                        <td>@item.Address</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Mail</td>
                                        <td>@item.OpenHours</td>
                                        <td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-warning">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/Contact/CreateContact" class="btn btn-success">Yeni iletişim bilgisi ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

