@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "ListCategories";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Kategori Listesi</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Kategori Adı</th>
                                    <th scope="col">Kategoriyi Sil</th>
                                    <th scope="col">Kategoriyi Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (ResultCategoryDto item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.Name</td>
                                        <td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-warning">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/Category/CreateCategory" class="btn btn-success">Yeni kategori ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>