<section id="stats" class="stats section dark-background">

    <img src="/yummy-red-1.0.0/assets/img/stats-bg.jpg" alt="" data-aos="fade-in">

    <div class="container position-relative" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.TotProdCount" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Ürün Sayısı</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.TotResCount" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Rezervasyon Sayısı</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.TotChefCount" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Şef Sayısı</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.TotGuestCount" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Misafir Sayısı</p>
                </div>
            </div><!-- End Stats Item -->

        </div>

    </div>

</section>