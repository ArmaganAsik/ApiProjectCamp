@model GetByIdChefDto
@{
    ViewData["Title"] = "UpdateChef";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Şef Güncelleme Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="ChefId" />
                            <label>Ad-Soyad</label>
                            <input type="text" asp-for="NameSurname" class="form-control" />
                            <br />
                            <label>Başlık/Unvan</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Açıklama</label>
                            <textarea rows="3" asp-for="Description" class="form-control"></textarea>
                            <br />
                            <label>Görsel Url</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                            <br />
                            <button class="btn btn-primary">Şefi güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>