@model GetByIdYummyEventDto
@{
    ViewData["Title"] = "UpdateYummyEvent";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Organizasyon Güncelleme Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="YummyEventId" />
                            <label>Başlık</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Açıklama</label>
                            <textarea rows="3" asp-for="Description" class="form-control"></textarea>
                            <br />
                            <label>Görsel Url</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                            <br />
                            <label>Fiyat</label>
                            <input type="text" asp-for="Price" class="form-control" />
                            <br />
                            <label>Durum</label>
                            <input type="checkbox" asp-for="Status" class="form-check-input" style="transform : scale(1.5); margin-left : 8px" />
                            <br />
                            <br />
                            <button class="btn btn-primary">Oraganizasyonu güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>