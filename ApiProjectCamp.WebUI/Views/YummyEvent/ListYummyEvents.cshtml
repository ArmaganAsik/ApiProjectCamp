@model List<ResultYummyEventDto>
@{
    ViewData["Title"] = "ListYummyEvents";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Etkinlik Organizasyon Listesi</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Görsel Url</th>
                                    <th scope="col">Fiyat</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Etkinliği Sil</th>
                                    <th scope="col">Etkinliği Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (ResultYummyEventDto item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.ImageUrl</td>
                                        <td>@item.Price</td>
                                        <td>@item.Status</td>
                                        <td><a href="/YummyEvent/DeleteYummyEvent/@item.YummyEventId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/YummyEvent/UpdateYummyEvent/@item.YummyEventId" class="btn btn-warning">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/YummyEvent/CreateYummyEvent" class="btn btn-success">Yeni etkinlik ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
